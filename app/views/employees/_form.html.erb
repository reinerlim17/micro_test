<%= form_for @employee, :html => { :class => "form-horizontal well"} do |f| %>
<table class="table table-condensed">
	<thead class="well">
		<tr>
			<th class="span3">Personal Information</th>
			<td></td>
		</tr>
	<tr>
		<th class="span3">Complete Name:</th>
		<td><%= f.text_field :name, :class => "span8" %></td>
	</tr>
	<tr>
		<th class="span3">Address:</th>
		<td><%= f.text_field :address, :class => "span8" %></td>
	</tr>
	<tr>
		<th class="span3">Contact Number:</th>
		<td><%= f.text_field :contact, :class => "span8" %></td>
	</tr>
	<tr>
		<th class="span3">Birthday:</th>
		<td><%= f.text_field :birthday, :class => "span8" %></td>
	</tr>
	<tr>
		<th class="span3">Age:</th>
		<td><%= f.text_field :age, :class => "span8" %></td>
	</tr>
	<tr>
		<th class="span3">Email:</th>
		<td><%= f.text_field :email, :class => "span8" %></td>
	</tr>
		
		</tbody>
	</table>
	<center><%= f.submit :class => "btn btn-primary" %></center>